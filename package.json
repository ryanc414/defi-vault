{
  "name": "defi-vault",
  "version": "1.0.0",
  "description": "DeFi vault contract",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@truffle/hdwallet-provider": "^2.0.9",
    "dotenv": "^16.0.1",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@uniswap/v3-periphery": "^1.4.1",
    "canonical-weth": "^1.4.0",
    "chai": "^4.3.6",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "truffle-contract": "^4.0.2",
    "truffle-plugin-verify": "^0.5.26"
  },
  "scripts": {
    "build": "truffle compile",
    "eslint": "eslint *.js migrations/*.js test/*.js",
    "eslint:fix": "eslint --fix *.js migrations/*.js test/*.js",
    "prettier:js": "prettier --write *.js migrations/*.js test/*.js",
    "prettier:js-check": "prettier -c *.js migrations/*.js test/*.js",
    "prettier:solidity": "prettier --write contracts/*.sol contracts/**/*.sol",
    "prettier:solidity-check": "prettier -c contracts/*.sol contracts/**/*.sol",
    "solhint": "solhint -f table contracts/*.sol",
    "test": "truffle test",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryanc414/defi-vault.git"
  },
  "author": "Ryan Collingham",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ryanc414/defi-vault/issues"
  },
  "homepage": "https://github.com/ryanc414/defi-vault#readme"
}
